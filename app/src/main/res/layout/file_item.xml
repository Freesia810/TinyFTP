<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/fileIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_file_type_video"
        android:layout_marginEnd="4dp"
        />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/fileIcon"
        android:textColor="#000000"
        android:textSize="18dp"
        android:layout_toRightOf="@id/fileIcon"
        android:text="test.mp4"
        android:singleLine="true"
        />

    <TextView
        android:id="@+id/timeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/nameTextView"
        android:layout_alignBottom="@id/fileIcon"
        android:textSize="14dp"
        android:text="2022-05-06 21:11:25" />
    <TextView
        android:id="@+id/sizeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/fileIcon"
        android:layout_alignParentRight="true"
        android:textSize="12dp"
        android:text="300.00MB" />
</RelativeLayout>